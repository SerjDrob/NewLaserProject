<UserControl x:Class="NewLaserProject.UserControls.DblTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewLaserProject.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="Uc"
             >
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="{Binding ActualWidth, ElementName=Uc, Mode=OneWay}"/>
            <Setter Property="Height" Value="{Binding ActualHeight, ElementName=Uc, Mode=OneWay}"/>
            <Setter Property="Background" Value="{Binding Background, ElementName=Uc, Mode=OneWay}"/>
            <Setter Property="MinWidth" Value="{Binding MinWidth, ElementName=Uc, Mode=OneWay}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment"  Value="Center"/>            
        </Style>
    </UserControl.Resources>
    <Grid x:Name="MyTextBox">
        <TextBox Text="{Binding DblText}"                  
                 PreviewTextInput="TextBox_PreviewTextInput" 
                 >           
        </TextBox>
    </Grid>
</UserControl>
